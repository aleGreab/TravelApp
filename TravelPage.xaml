<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarTravel.TravelPage"
             Title="TravelPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="car_road.jpg" SemanticProperties.Description="Travel destination list" HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Travel destination lists" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app will help you to manage your travel destination lists" />
    </VerticalStackLayout>
</ContentPage>