<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarTravel.CarPage"
             Title="CarPage">

    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="car.jpg" SemanticProperties.Description="Car List" HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Car Lists" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app will help you to manage your car lists" />
    </VerticalStackLayout>
</ContentPage>